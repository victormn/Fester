<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/party_card_padding"
        android:paddingEnd="@dimen/party_card_padding"
        android:paddingTop="@dimen/party_card_padding"
        android:paddingBottom="@dimen/party_card_padding"
        android:orientation="vertical">

        <TextView
            android:id="@+id/card_party_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="A super festa"

            android:textStyle="bold"/>

        <TextView
            android:id="@+id/card_party_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            tools:text="11/12/2016 14h30"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="horizontal">


            <TextView
                android:id="@+id/party_card_administrator_textview"
                android:visibility="gone"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="administrador"

                android:paddingStart="@dimen/party_card_label_padding"
                android:paddingEnd="@dimen/party_card_label_padding"

                android:background="@drawable/rounded_corner_red"
                android:textColor="@color/colorWhite"

                android:layout_marginEnd="@dimen/party_card_label_margin"                />

            <TextView
                android:id="@+id/party_card_dj_textview"
                android:visibility="gone"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="dj"

                android:paddingStart="@dimen/party_card_label_padding"
                android:paddingEnd="@dimen/party_card_label_padding"

                android:background="@drawable/rounded_corner_yellow"
                android:textColor="@color/colorWhite"

                android:layout_marginEnd="@dimen/party_card_label_margin"/>

            <TextView
                android:id="@+id/party_card_security_id"
                android:visibility="gone"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="seguranÃ§a"

                android:paddingStart="@dimen/party_card_label_padding"
                android:paddingEnd="@dimen/party_card_label_padding"

                android:background="@drawable/rounded_corner_blue"
                android:textColor="@color/colorWhite"

                android:layout_marginEnd="@dimen/party_card_label_margin"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>